<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.stuwiapp.controller.studySessionConfigurationController">
   <children>
      <Button fx:id="saveTemplateButton" layoutX="270.0" layoutY="70.0" mnemonicParsing="false" onAction="#saveSettingsAsTemplate" prefHeight="26.0" prefWidth="170.0" text="Save Settings as Template" />
      <Label fx:id="titleLabel" layoutX="181.0" layoutY="29.0" text="Start new study session">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <MenuButton fx:id="templateDropdown" layoutX="141.0" layoutY="70.0" mnemonicParsing="false" text="SelectTemplate">
        <items>
          <MenuItem mnemonicParsing="false" text="Action 1" />
          <MenuItem mnemonicParsing="false" text="Action 2" />
        </items>
      </MenuButton>
      <TextField fx:id="subjectField" layoutX="141.0" layoutY="124.0" prefHeight="26.0" prefWidth="300.0" />
      <Label fx:id="subjectLabel" layoutX="141.0" layoutY="107.0" text="Subject" />
      <Label fx:id="sessionDurationLabel" layoutX="141.0" layoutY="160.0" text="Session duration" />
      <Slider fx:id="durationSlider" layoutX="141.0" layoutY="184.0" majorTickUnit="30.0" max="180.0" onDragDetected="#updateSessionDurationIndicator" prefHeight="33.0" prefWidth="300.0" showTickLabels="true" />
      <Slider fx:id="breakDurationSlider" layoutX="300.0" layoutY="251.0" majorTickUnit="5.0" max="20.0" onDragDetected="#updateBreakDurationIndicator" prefHeight="33.0" prefWidth="142.0" showTickLabels="true" />
      <Label fx:id="infoLabelBreaks" layoutX="147.0" layoutY="277.0" prefHeight="29.0" prefWidth="130.0" text="Leave at 0 for no breaks">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
      <Label fx:id="breakIntervalLabel" layoutX="141.0" layoutY="227.0" text="Break Intervals" />
      <Slider fx:id="breakIntervalSlider" layoutX="141.0" layoutY="251.0" majorTickUnit="20.0" max="60.0" onDragDetected="#updateBreakIntervalIndicator" prefHeight="33.0" prefWidth="142.0" showTickLabels="true" />
      <Label fx:id="breakDurationLabel" layoutX="300.0" layoutY="227.0" text="Break duration" />
      <Button fx:id="startSessionButton" layoutX="247.0" layoutY="328.0" mnemonicParsing="false" text="Start Session" />
      <Label fx:id="sessionDurationIndicator" alignment="CENTER_RIGHT" layoutX="414.0" layoutY="160.0" prefHeight="17.0" prefWidth="26.0" text="0" />
      <Label fx:id="breakDurationIndicator" alignment="CENTER_RIGHT" layoutX="414.0" layoutY="227.0" prefHeight="17.0" prefWidth="26.0" text="0" />
      <Label fx:id="breakIntervalIndicator" alignment="CENTER_RIGHT" layoutX="249.0" layoutY="227.0" prefHeight="17.0" prefWidth="26.0" text="0" />
   </children>
</AnchorPane>
