<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.stuwiapp.controller.SessionOverviewController">
   <children>
      <Button fx:id="returnButton" layoutX="249.0" layoutY="327.0" mnemonicParsing="false" onAction="#redirectToHome" text="Return to home" />
      <TableView fx:id="sessionTable" layoutX="13.0" layoutY="37.0" prefHeight="254.0" prefWidth="573.0">
         <columns>
            <TableColumn id="startDateColumn" fx:id="startDateColumn" editable="false" prefWidth="75.0" text="Start" />
            <TableColumn id="subjectColumn" fx:id="subjectColumn" editable="false" prefWidth="86.0" text="Subject" />
            <TableColumn id="durationColumn" fx:id="durationColumn" editable="false" prefWidth="82.0" text="Duration" />
            <TableColumn id="tempColumn" fx:id="tempColumn" editable="false" prefWidth="73.0" text="Temp" />
            <TableColumn id="humidColumn" fx:id="humidColumn" editable="false" prefWidth="88.0" text="Humid" />
            <TableColumn id="loudColumn" fx:id="loudColumn" editable="false" prefWidth="106.0" text="Loud" />
            <TableColumn id="ratingColumn" fx:id="ratingColumn" editable="false" prefWidth="62.0" text="Rating" />
         </columns></TableView>
      <Label layoutX="14.0" layoutY="291.0" text="Sensor data is displayed as LOW / HIGH / AVG" />
      <Button fx:id="deleteSessionButton" layoutX="441.0" layoutY="327.0" mnemonicParsing="false" onAction="#deleteSession" text="Delete Session" />
      <ImageView fitHeight="101.0" fitWidth="87.0" layoutX="13.0" layoutY="289.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/StuWi.png" />
         </image>
      </ImageView>
      <Label fx:id="deletedSessionLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="193.0" layoutY="367.0" prefHeight="18.0" prefWidth="212.0" />

   </children>
</AnchorPane>
